{
  "name": "@githubocto/snowpack-vscode-extension-template",
  "version": "1.0.0",
  "description": "A create-snowpack-app template for writing VS Code extensions with webviews",
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "format": "prettier --write **/*.ts",
    "dev": "nodemon --watch src/webviews/ -e 'ts,tsx,css' --exec snowpack build",
    "build": "TAILWIND_MODE='build' snowpack build"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/githubocto/snowpack-vscode-extension-template.git"
  },
  "keywords": [
    "snowpack",
    "csa-template"
  ],
  "author": "Idan Gazit <idan@gazit.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/githubocto/snowpack-vscode-extension-template/issues"
  },
  "homepage": "https://github.com/githubocto/snowpack-vscode-extension-template#readme",
  "devDependencies": {
    "@githubocto/tailwind-vscode": "^1.0.3",
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-postcss": "^1.2.2",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@tailwindcss/jit": "^0.1.18",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/snowpack-env": "^2.3.3",
    "@types/tailwindcss": "^2.0.2",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.23.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.9",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.2.1",
    "snowpack": "^3.2.2",
    "tailwindcss": "^2.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "nanoid": "^3.1.22",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vscode-codicons": "^0.0.16"
  },
  "activationEvents": [
    "onCommand:snowpackWebview.start"
  ],
  "contributes": {
    "commands": [
      {
        "command": "snowpackWebview.start",
        "title": "Open the Snowpack Webview",
        "category": "Snowpack Webview"
      }
    ]
  }
}